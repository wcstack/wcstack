{
  "name": "@wcstack/autoloader",
  "version": "1.3.9",
  "description": "Auto-detect and dynamically import undefined custom elements via Import Maps. Zero dependencies, buildless.",
  "type": "module",
  "main": "./dist/index.esm.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js"
    }
  },
  "files": [
    "dist"
  ],
  "directories": {
    "example": "__e2e__"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsc && rollup -c",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "npm run build && npm run test:coverage"
  },
  "keywords": [
    "web-components",
    "autoloader",
    "custom-elements",
    "import-maps",
    "dynamic-import",
    "mutation-observer",
    "buildless",
    "zero-dependencies",
    "lazy-loading"
  ],
  "author": "mogera551",
  "homepage": "https://github.com/nicari/wcstack/tree/main/packages/autoloader#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicari/wcstack.git",
    "directory": "packages/autoloader"
  },
  "bugs": {
    "url": "https://github.com/nicari/wcstack/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.4",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}
